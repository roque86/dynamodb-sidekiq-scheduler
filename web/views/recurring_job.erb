<h3>Recurring Job Update</h3>

<form action="<%= @form_action %>"
      method="post" class="recurring-job" style="background-color:white;">
  <%= csrf_tag %>
  <div style="padding: 20px;">
    <label for="name">Name:</label><br>
    <input <%= @existing_rule ? 'disabled' : 'required' %> required name='name' type="text"
           value="<%= @name %>" style='width:50%;'/><br>
    <label for="args" style="padding-top: 10px;">Configuration:</label><br>
    <textarea name='config' style='width:50%'><%= @config.to_json.html_safe %></textarea><br><br>

    <a href="<%= root_path %>recurring-jobs" class="btn btn-warn btn-xs"><%= t('cancel') %></a>
    <input type="submit" class="btn btn-warn btn-xs" value="<%= @existing_rule ? t('update') : t('create') %>"/><br>
    <a></a>
  </div>
</form>
